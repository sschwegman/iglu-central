              },
              "violation": {
                "type": "string",
                "description": "Description of the violation that occurred"
              }
            },
            "required": [ "field", "value", "violation" ],
            "additionalProperties": false
          }
        }
      },
      "required": [ "timestamp", "messages" ],
      "additionalProperties": false
    },
